
# build image
FROM openjdk:8u222-slim as builder

RUN apk add imagemagick \
    && mkdir -p /work/src \
    && mkdir -p /work/gradle \
    && mkdir -p /work/.git

COPY .git /work/.git
COPY src /work/src
COPY gradle /work/gradle
COPY build.gradle settings.gradle gradlew /work/

WORKDIR /work
RUN ./gradlew build

# productive image
FROM openjdk:8u222-jre-slim

RUN apk add imagemagick
RUN mkdir /data
COPY --from=builder /work/build/libs/*.jar /opt/PreviewService.jar

HEALTHCHECK  --interval=10s --timeout=3s CMD wget --quiet --tries=1 --spider http://localhost:4200/status || exit 1

ENTRYPOINT ["java", "-Xmx6g", "-jar","/opt/SheetImposition.jar"]
